  <% if params[:user_id] %>
    <h1>My Random Acts of Kindness</h1>
    <%= link_to 'Recent Posts', @link_path %>
  <% else %>
    <h1>Recent Random Acts of Kindness</h1>
    <%= link_to 'My Posts', @link_path %>
  <% end %>
    <table>
      <thead>
        <tr>
          <th>Title:</th>
          <th>Description:</th>
          <th></th>
          <th>Posted by:</th>
          <th>Category:</th>
        </tr>
      </thead>

      <% @posts.each do |post| %>
        <tr>
           <td><%= post.title %></td>
           <td><%= post.description %></td>
           <td><%= post.created_at %></td>
           <td><%= User.find(post.user_id).email %></td>
           <td><%= post.category %></td>
           <td><%= link_to 'Show', post %></td>
        </tr>
      <% end %>
    </table>
