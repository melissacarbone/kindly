<div class='small-4 columns background signin'>
  <h2>Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name, label: 'First Name', required: true, autofocus: true %>
    <%= f.input :last_name, label: 'Last Name', required: true, autofocus: true %>
    <%= f.input :email, label: 'E-mail', required: true, autofocus: true %>
    <%= f.input :password, required: true %>
    <%= f.input :password_confirmation, label: 'Password Confirmation', required: true %>
    <%= f.label :image, "Upload a Photo" %>
    <%= f.file_field :image %>

    <div class="form-actions">
      <%= f.button :submit, "Sign Up" %>
    </div>
  </div>
  <% end %>
</div>

